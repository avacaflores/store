<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= raw t('errors.template.header', count:object.errors.count) %> 
    <hr>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  </div>
<% end %>