<div class="row filter-bar">
  <div class="col-md-6 content-bar">
    <span class="count">
      <%= t('general.count')%>
      <%= @products.count %>
    </span>
    <% if params[:search]%>
    <span class="filter-element">
      <%= params[:search] %>
      <%= link_to content_tag(:span, ' x', class: "filter-x"), clear_search_path(search: params[:search],tag: params[:tag],brand: params[:brand]) %>
    </span>
    <% end %>
    <% if params[:tag] && params[:tag] != "" %>
    <span class="filter-element">
      <%= params[:tag] %>
      <%= link_to content_tag(:span, ' x', class: "filter-x"), clear_tag_path(search: params[:search],tag: params[:tag],brand: params[:brand]) %>
    </span>
    <% end %>
    <% if params[:brand] && params[:brand] != "" %>
    <span class="filter-element">
      <%= params[:brand] %>
      <%= link_to content_tag(:span, ' x', class: "filter-x"), clear_brand_path(search: params[:search],tag: params[:tag],brand: params[:brand]) %>
    </span>
    <% end %>
  </div>
  <div class="col-md-6 search-bar">
    <%= form_tag products_path, method: 'get' do %>
    <%= submit_tag t('general.search'), name: nil %>
    <%= text_field_tag :search, params[:search] %>
    <%= text_field_tag :tag, params[:tag], hidden: true %>
    <%= text_field_tag :brand, params[:brand], hidden: true %>
    <% end %>
  </div>
</div>


