<div class="page-header">
  <h1>Products</h1>
</div>
<table class="table table-striped">
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td class='col-md-2'>
        <% if main_image(product) %>
        <div class="thumbnail">
          <%= link_to image_tag(main_image(product)), product_path(product) %>
        </div>
        <% end %>
      </td>
      <td><strong><%= product.title %></strong><br>
      <strong>(<%= product.brand.name unless product.brand.nil? %>)</strong><br>
        <%= simple_format(truncate(product.description, length: 180), {}, wrapper_tag: "span") %><br>
        <%= number_to_currency(product.price) %><br>
        <div class="btn-group">
          <%= link_to 'Show', product_path(product), class: 'btn btn-xs btn-default' %>
          <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-xs btn-default' %>
          <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<span class="row_buttons">
  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
</span>



