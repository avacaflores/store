<div class="col-sm-2">
  <h2>Featured Products</h2>
  <%= render partial: 'promo' %>
</div>
<div class="col-sm-8">
  <div class="filters">
    <%= render 'shared/filters' %>
  </div>
  <table class="table table-striped">
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td class='col-md-2 col-sm-3 col-xs-4'>
          <% if main_image(product) %>
          <div class="thumbnail">
            <%= link_to image_tag(main_image(product)), product_path(product) %>
          </div>
          <% end %>
        </td>
        <td><strong><%= product.title %></strong><br>
          <strong>(<%= product.brand.name unless product.brand.nil? %>)</strong><br>
          <%= simple_format(truncate(product.description, length: 180), {}, wrapper_tag: "span") %><br>
          <%= number_to_currency(product.price) %>
          <% if product.offer %>
            <span class="offer">
              <br>
              <%= number_to_currency(product.offer_price) %>
              - Offer price
            </span>
          <% end %>
          <% if session[:user_id] %>
            <br>
            <div class="btn-group btn-to-right">
              <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-xs btn-default' %>
              <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
            </div>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% if session[:user_id] %>
  <span class="row_buttons2 well">
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
  </span>
  <% end %>
</div>
<div class="col-sm-2">
  <h2>Sections</h2>
  <%= render @sections %>
  <h2>Brands</h2>
  <%= render @brands %>
</div>



