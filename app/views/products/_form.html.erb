<%= simple_form_for @product, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    
    <%= f.input :title, label: "Product Name"%>
    <%= f.association :brand %>

    
    
    <%= f.text :description %>
    <%= f.input :price %>
    <%= f.label "Image" %>
    <%= f.file_field :photo, class: 'filestyle' %>
    <%= image_tag @product.photo.url(:thumb) if @product.photo_file_name %>

    
  <%= f.error :base %>

  <span class="row_buttons">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', products_path, class: 'btn btn-default' %>
  </span>
<% end %>
