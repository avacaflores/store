
<%= simple_form_for @product, :html => { :class => 'form-inline', :multipart => true } do |f| %>

<%= render 'shared/error_messages', object: f.object %>
    
<%= f.input :title, label: "Product", error: false %>
<%= f.input :part_number %>
<%= f.association :brand, error: false %>
<%= f.input :description %>
<%= f.input :min_price, input_html: { class: 'price-field' } %>
<%= f.input :price, input_html: { class: 'price-field' } %>
<%= f.input :offer_price, input_html: { class: 'price-field' } %>
<%= f.input :offer, collection: [['Yes',true] ,['No',false]], input_html: { class: 'boolean-field' } %>
<%= f.input :promotion, collection: [['Yes',true] ,['No',false]], input_html: { class: 'boolen-field' } %>
<%= f.association :section, error: false %>
<%= f.label "Image" %>
<%= f.file_field :photo, class: 'filestyle' %>
<%= image_tag @product.photo.url(:thumb) if @product.photo_file_name %>

<%= f.error :base %>

<span class="row_buttons">
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to 'Cancel', products_path, class: 'btn btn-default' %>
</span>
<% end %>

