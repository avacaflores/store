<% @products_promo.each do |product| %>
<div class="thumbnail">
  <strong><%= product.title %></strong>
  <%= link_to image_tag(product.photo.url(:thumb)), product_path(product) %>
  <%= number_to_currency(product.price) %>
  <% if product.offer %>
  <span class="offer">
    <br>
    <%= number_to_currency(product.offer_price) %>
    - Offer price
  </span>
  <% end %>
  <% if session[:user_id] %>
  <div class="btn-group btn-to-right2">
    <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-xs btn-default' %>
    <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
  </div>
  <% end %>
</div>
<% end %>
