<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3><%= t('.title') %></h3>
    </div>
    <div class="panel-body content-panel">
      <dl class="dl-horizontal">
        <%= row_title t('contacts.label.name') %>
        <%= row_content @contact.name %>
        <%= row_title t('contacts.label.email') %>
        <%= row_content @contact.email %>
        <%= row_title t('contacts.label.phone') %>
        <%= row_content @contact.phone %>
        <%= row_title t('contacts.label.message') %>
        <%= row_content simple_format(@contact.message, {}, wrapper_tag: "span") %>
      </dl>
      <hr>
      <%= link_to t('products.action.list'), products_path, class: 'btn btn-sm btn-default' %>
    </div>
  </div>
</div>
