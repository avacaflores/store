<div class="col-md-6 col-md-offset-3">
  <h3>Users</h3>
  <table class="table table-striped">
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><strong><%= user.name %></strong><br>
          <div class="item_buttons">
            <div class="btn-group  btn-to-right">
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-xs btn-default' %>
              <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
            </div>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <%= link_to 'New User', new_user_path, class: 'btn btn-sm btn-primary' %>
</div>
