<div class="col-md-6 col-md-offset-3">
  <h3>Sections</h3>
  <table class="table table-striped">
    <tbody>
      <% @sections.each do |section| %>
      <tr>
        <td><strong><%= section.name %></strong><br>
          <div class="btn-group btn-to-right">
            <%= link_to 'Edit', edit_section_path(section), class: 'btn btn-xs btn-default' %>
            <%= link_to 'Delete', section_path(section), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <%= link_to 'New Section', new_section_path, class: 'btn btn-sm btn-primary' %>
</div>