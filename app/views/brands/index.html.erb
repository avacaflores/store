<div class="col-md-6 col-md-offset-3">
  <h3><%= t('brands.title') %></h3>
  <table class="table table-striped">
    <tbody>
      <% @brands.each do |brand| %>
      <tr>
        <td  class='col-md-3'>
          <% if brand.photo.present? %>
          <div class="thumbnail">
            <%= link_to image_tag(brand.photo.url(:thumb)), brand_path(brand) %>
          </div>
          <% end %>
        </td>
        <td><strong><%= brand.name %></strong><br>
          <div class="btn-group btn-to-right">
            <%= link_to t('action.edit'), edit_brand_path(brand), class: 'btn btn-xs btn-default' %>
            <%= link_to t('action.delete'), brand_path(brand), method: :delete, data: { confirm: t('action.confirm') }, class: 'btn btn-xs btn-danger' %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <%= link_to 'New Brand', new_brand_path, class: 'btn btn-sm btn-primary' %>
</div>

